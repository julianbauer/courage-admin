@import 'variables'
@import 'type'

#stories
  display flex
  padding 12.5px
  flex-wrap wrap

.story-container
  width 50%
  padding 12.5px
  box-sizing border-box
  border-radius 3px
  overflow hidden

.story
  display flex
  background $white
  transition box-shadow .1s linear, transform .1s linear
  cursor pointer
  height 30vw

  &:hover
    box-shadow 0 0 10px rgba(0,0,0,0.1)
    transform scale(1.01)

.story-content
  width 50%
  box-sizing border-box
  padding 25px

  h1
    margin 25px 0
    font-size 30px

  p
    font-size 10px

.story-image
  align-self stretch
  width 50%
  background-size cover
  background-color darken($lightGray, 5%)

// Story Popup

#newStoryContainer
  width 50%
  padding 12.5px
  box-sizing border-box

#newStory
  box-sizing border-box
  border 3px dashed darken($lightGray, 10%)
  cursor pointer
  width 100%
  height 30vw
  display flex
  justify-content center
  align-items center
  transition background .1s ease, border-color .1s ease

  &:hover
    background alpha($orange, 0.5)
    border-color alpha($lightGray, 0)

    .addStory
      &:before, &:after
        background $lightGray

.addStory
  width 50px
  height @width
  position relative

  &:before, &:after
    content ""
    position absolute
    background darken($lightGray, 10%)
    top 50%
    left @top
    width 100%
    height 10px
    transform translate(-50%, -50%)
    transition background .1s ease

  &:after
    transform translate(-50%, -50%) rotate(90deg)


#story-popup
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background rgba(0,0,0,0.8)
  display flex
  justify-content center
  align-items center

  .story-container
    background $white
    width 80vw
    display flex
    flex-direction column
    padding 0

  .story
    width 100%
    height 80vh
    max-height 60vw
    cursor default

    &:hover
      box-shadow none
      transform none

  .story-content
    padding 50px
    display flex
    flex-direction column

    input, textarea
      width 100%
      font-size 20px
      transition border .1s linear

      &:focus
        border 1px solid alpha($orange, 0.5)

    input
      line-height 1
      flex-shrink 0

      &.story-title-input
        font-size 60px
        font-weight bold
        margin 0 0 25px

    textarea
      flex-grow 100
      resize none

.story-image-url-container
  margin 25px 0 0
  position relative
  &:after
    content ""
    position absolute
    top 50%
    width 50px
    right -@width
    height 1px
    background darken($lightGray, 10%)


