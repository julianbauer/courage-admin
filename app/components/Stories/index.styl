.button-group
  display flex
  justify-content flex-end
  padding 25px
  box-sizing border-box
  width 100%
  border-top 1px solid darken($lightGray, 10%)

.submit-button, .cancel-button
  background $orange
  padding 10px 10px 6px
  outline none
  border none
  color white
  font-size 20px
  font-weight bold
  width 150px
  cursor pointer
  margin-left 25px
  border-radius 3px
  transition opacity .1s linear

  &:hover, &:active
    opacity 0.8

.cancel-button
  background $lightGray
  color $gray
