@import 'variables'
@require 'type'

html, body, h1, h2, h3, p, a
  margin 0
  padding 0

#header
  position fixed
  top 0
  left 0
  right 0
  background $highlightColor

#nav
  display flex
  justify-content space-around
  align-items center
  height 80px

.nav-link
  font-weight bold
  color $white
  font-size 25px
  text-transform uppercase
  opacity 0.5
  text-decoration none
  transition opacity .1s linear

  &:hover, &.active
    opacity 1

#content
  margin-top 80px
