@import 'variables'
@require 'type'

html, body, h1, h2, h3, p, a
  margin 0
  padding 0

body {
  background $lightGray
}

#header
  position fixed
  top 0
  left 0
  right 0
  background darken($lightGray, 5%)

  &:before
    content ""
    display block
    height 3px
    background-image linear-gradient(135deg, $white 25%, $orange 25%, $orange 75%, $white 75%)
    background-size 60px @height

#logo
  position absolute
  top 0
  left 50px
  background $white
  border-bottom-left-radius 5px
  border-bottom-right-radius @border-bottom-left-radius
  width 70px
  height 90px
  box-shadow 0 1px 5px rgba(0,0,0,0.2)

#nav
  display flex
  justify-content space-around
  align-items center
  height 80px
  margin-left 50px + 70px
  z-index 100
  // background $lightGray

.nav-link
  font-weight bold
  color $gray
  font-size 25px
  text-transform uppercase
  opacity 0.5
  text-decoration none
  transition opacity .1s linear

  &:hover, &.active
    opacity 1

#content
  margin-top 80px
